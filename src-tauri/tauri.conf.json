{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "timetrackerv",
  "version": "0.1.0",
  "identifier": "de.timetrackerv.application",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "title": "TimeTracker",
        "width": 1200,
        "height": 1200,
        "decorations": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "default": true,
      "allow-load": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
